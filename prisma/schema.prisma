generator client {
  provider = "prisma-client"
  output   = "generated/prisma"
}

generator zod {
  provider = "zod-prisma-types"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String     @unique
  password    String
  role        UserType   @default(USER)
  created_at  DateTime   @default(now())
  updated_at  DateTime?
  phoneNumber String?
  authToken   AuthToken?

  likedProductIds  String[]  @db.ObjectId
  likedProducts    Product[] @relation("UserLikes", fields: [likedProductIds], references: [id])
  reservedProducts Product[] @relation("UserReservation")
}

model AuthToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  createdAt DateTime
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique @db.ObjectId
}

model Product {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  price      Float?
  type       ProductType
  data       Json
  imageUrl   String
  imageName  String
  isReserved Boolean     @default(false)

  likedByUserIds String[] @db.ObjectId
  likedByUsers   User[]   @relation("UserLikes", fields: [likedByUserIds], references: [id])

  reservedByUserId String? @db.ObjectId
  reservedByUser   User?  @relation("UserReservation", fields: [reservedByUserId], references: [id])
}

enum ProductType {
  CLOTHES
  SHOE
  HAT
  PERFUME
  BAG
}

enum UserType {
  ADMIN
  USER
}
